<div class="item-sell-contents">
  <header class="items-sell-header">
    <h1>アイテム追加ページ</h1>
  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">アイテムの情報を入力してください</h2>
   <%= form_with model: @item, local: true do |f| %>
  <%# 商品画像 %>
  <div class="img-upload">
    <div class="weight-bold-text">
      アイテム画像
      <span class="indispensable">必須</span>
    </div>
    <div class="click-upload">
      <p>
        クリックで画像をアップロード
      </p>
      <%= f.file_field :image, id: "item-image" %>
    </div>
  </div>
  <%# アイテム画像 %>

  <%# アイテム名 アイテム説明 %>
  <div class="new-items">
    <div class="weight-bold-text">
      アイテム名
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class: "items-text", id: "item-name", placeholder: "商品名（必須 40文字まで)", maxlength: "40" %>
    <div class="items-explain">
      <div class="weight-bold-text">
        商品の説明
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :description, class: "item-text", id: "item-info", placeholder: "商品の説明（必須 1000文字まで)", rows: "7", maxlength: "1000" %>
    </div>
  </div>
  <%# アイテム名 商品説明 %>

  <%# アイテム詳細 %>
  <div class="items-detail">
    <div class="weight-bold-text">アイテム詳細</div>
    <div class="form">
      <div class="weight-bold-text">
        カテゴリー
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: "select-box", id: "item-category"}) %>
      <div class="weight-bold-text">
        商品の状態
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:item_status_id, ItemStatus.all, :id, :name, {}, {class: "select-box", id: "item-sales-status"}) %>
    </div>
  </div>
  <%# アイテム詳細 %>

  <% if @item.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @item.errors.full_messages.uniq.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit '追加' %>
  </div>
<% end %>

<%= link_to 'ホーム画面に戻る', root_path, class: 'btn btn-secondary' %>
